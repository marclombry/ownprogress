{% extends 'base.html.twig' %}

{% block title %}Training{% endblock %}

{% block body %}
    <h1>Training</h1>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ training.id }}</td>
            </tr>
            <tr>
                <th>Is_realized</th>
                <td>{{ training.isRealized ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Date_training</th>
                <td>{{ training.dateTraining ? training.dateTraining|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Exercice</th>
                {% for exercice in training.exercice %}
                <td>{{exercice.name}}</td>
                {% endfor %}
                
            </tr>
        </tbody>
    </table>

    <a href="{{ path('training_index') }}">back to list</a>

    <a href="{{ path('training_edit', {'id': training.id}) }}">edit</a>

    {{ include('training/_delete_form.html.twig') }}
{% endblock %}
